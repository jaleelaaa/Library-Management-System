# Application
APP_NAME=FOLIO LMS
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql+asyncpg://folio:folio_password@localhost:5432/folio_lms

# Redis
REDIS_URL=redis://localhost:6379/0

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# JWT Authentication
SECRET_KEY=your-secret-key-min-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (JSON array format required)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Multi-tenancy
DEFAULT_TENANT=default
ENABLE_MULTI_TENANCY=true

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=["pdf","epub","mobi","jpg","jpeg","png"]

# Email/SMTP Configuration (for Celery email tasks)
# For Gmail: Use App Password (not regular password)
# For other providers: Use appropriate SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@folio-lms.com
SMTP_FROM_NAME=FOLIO Library Management System
SMTP_USE_TLS=true
SMTP_USE_SSL=false
